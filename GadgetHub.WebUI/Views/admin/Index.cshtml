@model IEnumerable<GadgetHub.Domain.Entities.Gadget>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>All Products</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    Product ID
                <th>
                    Name
                </th>
                <th class="text-right">
                    Description
                </th>
                <th class="text-right">
                    Price
                </th>
                <th class="text-right">
                    Category
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { item.ProductId })
                    </td>
                    <td>@item.Price.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin", new { id = item.ProductId }))
                        {
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        }
                    </td>
                    <td>@item.Category</td>
                </tr>
            }
        </table>
    </div>

    <div class="card-footer">
        <p>
            @Html.ActionLink("Add new Product", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

