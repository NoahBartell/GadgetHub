@model GadgetHub.WebUI.Models.GadgetListViewModel

@{
    ViewBag.Title = "Gadgets";
}

@foreach (var p in Model.Gadgets)
{
                <div>
                    <h3>Name = @p.Name</h3>
                    Brand = @p.Brand
                    <h4>Price = @p.Price.ToString("c")</h4>
                    Category = @p.Category
                    Description = @p.Description
                </div>
}

<div class="btn-group float-end">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x}))
</div>