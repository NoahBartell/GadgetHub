@using GadgetHub.Domain.Entities
@model IEnumerable<Gadget>

@{
    ViewBag.Title = "Gadgets";
}

@foreach (var p in Model)
{
                <div>
                    <h3>Name = @p.Name</h3>
                    Brand = @p.Brand
                    <h4>Price = @p.Price.ToString("c")</h4>
                    Category = @p.Category
                    Description = @p.Description
                </div>
                <span>==========================</span>
}